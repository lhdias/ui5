<mvc:View
   height="100%"
   controllerName="view.App"
   xmlns="sap.m"
   xmlns:table="sap.ui.table"
   xmlns:mvc="sap.ui.core.mvc">
  <Page
     title="Page"
     class="marginBoxContent" >
    <customHeader>
      <Toolbar>
        <Button type="Back" press="onPress" />
        <ToolbarSpacer/>
        <Label text="Title" />
        <ToolbarSpacer/>
      </Toolbar>
    </customHeader>
    <content>
      <Table items="{	path: '/Books' }">
        <headerToolbar>
          <Toolbar>
            <Label text="Books"></Label>
          </Toolbar>
        </headerToolbar>
        <columns>
          <Column width="12em">
            <Label text="Id" />
          </Column>
          <Column width="12em">
            <Label text="Title" />
          </Column>
          <Column width="12em">
            <Label text="Author" />
          </Column>
        </columns>
        <items>

          <ColumnListItem>
            <cells>
              <ObjectIdentifier text="{value>Id}" />
              <ObjectIdentifier text="{value>Title}" />
              <ObjectIdentifier text="{value>Author}" />
            </cells>
          </ColumnListItem>
        </items>
      </Table>
    </content>
    <footer>
    
    </footer>
  </Page>
</mvc:View>